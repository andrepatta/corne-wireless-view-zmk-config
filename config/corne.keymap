#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    macros {
        Double_Quotes: Double_Quotes {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp DOUBLE_QUOTES &kp SPACE>, <&macro_press>;

            label = "DOUBLE_QUOTES";
        };

        Single_Quote: Single_Quote {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp SINGLE_QUOTE &kp SPACE>, <&macro_press>;

            label = "SINGLE_QUOTE";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | ESC  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |  ALT |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | CTRL|

            display-name = "Base";
            bindings = <
&kp TAB     &kp Q  &kp W  &kp E     &kp R  &kp T        &kp Y    &kp U  &kp I       &kp O    &kp P     &kp BSPC
&kp ESCAPE  &kp A  &kp S  &kp D     &kp F  &kp G        &kp H    &kp J  &kp K       &kp L    &kp SEMI  &kp ENTER
&kp LCTRL   &kp Z  &kp X  &kp C     &kp V  &kp B        &kp N    &kp M  &kp COMMA   &kp DOT  &kp FSLH  &kp RALT
                          &kp LGUI  &mo 1  &kp SPACE    &kp RET  &mo 2  &kp LSHIFT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | CTRL|

            display-name = "Lower";
            bindings = <
&trans      &Single_Quote  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &Double_Quotes    &kp LEFT_BRACKET   &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp BACKSPACE
&bt BT_CLR  &bt BT_SEL 0   &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp DOLLAR        &kp LEFT           &kp DOWN              &kp UP                 &kp RIGHT             &trans                 &kp ENTER
&trans      &trans         &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0      &kp RIGHT_BRACKET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans                &trans                 &trans
                                         &kp LGUI      &trans        &kp SPACE         &kp RET            &trans                &kp LSHIFT
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // |  ESC |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | CTRL|

            display-name = "Raise";
            bindings = <
&trans  &kp EXCL  &kp AT  &kp HASH   &kp DLLR       &kp PRCNT    &kp CARET        &kp AMPS       &kp ASTERISK      &kp LPAR  &kp RPAR  &kp BACKSPACE
&trans  &trans    &trans  &kp GRAVE  &kp TILDE      &kp PLUS     &kp EXCLAMATION  &kp EQUAL      &kp COLON         &trans    &trans    &kp ENTER
&trans  &trans    &trans  &kp PIPE   &kp BACKSLASH  &kp MINUS    &kp UNDER        &kp LESS_THAN  &kp GREATER_THAN  &trans    &trans    &trans
                          &kp LGUI   &trans         &kp SPACE    &kp RET          &trans         &trans
            >;
        };
    };
};
